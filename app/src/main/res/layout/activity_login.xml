<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"

    >





    <!--<com.airbnb.lottie.LottieAnimationView
        android:id="@+id/lottieView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:lottie_fileName="animapay.json"
        app:lottie_loop="true"
        app:lottie_autoPlay="true"
        android:visibility="gone"
        />-->

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <Button
                android:id="@+id/bt_startLoginpage"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:text="startLoginpage"
                android:visibility="visible"
                />

            <Button
                android:id="@+id/bt_startgoldpage"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:text="startgoldpage"
                android:visibility="gone"
                />

            <Button
                android:id="@+id/bt_startbeanpage"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:text="startbeanpage"
                android:visibility="gone"
                />
            <Button
                android:id="@+id/bt_startpointpage"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:text="logout"
                />
            <Button
                android:id="@+id/bt_startLog"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:text="startLog"
                />
            <Button
                android:id="@+id/bt_endLog"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:text="endLog"
                />
            <TextView
                android:id="@+id/tx_double"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:text="startpointpage"
                />
            />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="30dp"
            >

            <EditText
                android:id="@+id/et_deviceno"
                android:layout_width="250dp"
                android:layout_height="50dp"
                android:hint="请输入目标设备的DeviceNo"
                android:gravity="center"
                android:background="@drawable/bt_cancel_bg"
                android:text="A8A19881267C685"
                />

            <TextView
                android:id="@+id/tx_socket_status"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text="当前设备未连接"
                android:textColor="@color/red"
                android:textSize="18sp"
                android:layout_marginTop="20dp"
                />

        </LinearLayout>

    </LinearLayout>





    <ImageView
        android:id="@+id/sweepIV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="200dp"

        />


    <android.support.v7.widget.RecyclerView
        android:id="@+id/left_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="vertical"
        android:background="@color/black"
        android:visibility="gone"
        />


</LinearLayout>
