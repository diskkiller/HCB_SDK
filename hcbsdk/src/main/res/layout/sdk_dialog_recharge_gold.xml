<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <RelativeLayout
        android:layout_width="@dimen/x600"
        android:layout_height="@dimen/y300"
        android:layout_centerInParent="true"
        android:background="@drawable/sdk_dialog_bg"
        android:gravity="center">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <android.support.design.widget.TextInputLayout
                android:id="@+id/gold_input_layout"
                android:layout_width="@dimen/x450"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/y8"
                android:layout_marginTop="@dimen/y8"
                android:theme="@style/txt_lab"
                app:errorTextAppearance="@style/MyFloatingErrorStyle"
                app:hintTextAppearance="@style/MyFloatingStyle">

                <EditText
                    android:id="@+id/et_recharge_gold_custom"
                    android:layout_width="@dimen/x450"
                    android:layout_height="wrap_content"
                    android:hint="请输入充值数量"
                    android:imeOptions="actionDone"
                    android:inputType="number"
                    android:maxLength="7"
                    android:text=""
                    android:textColor="@color/ae6058" />
            </android.support.design.widget.TextInputLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/y50"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn_charge_gold_cancel"
                    android:layout_width="@dimen/x150"
                    android:layout_height="@dimen/y60"
                    android:layout_alignParentBottom="true"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/private_sys_btn_cancle_bg"
                    android:gravity="center"
                    android:padding="@dimen/x3"
                    android:text="取消"
                    android:textColor="#FF9903"
                    android:textSize="@dimen/x30">

                </Button>

                <Button
                    android:id="@+id/btn_recharge_gold_sure"
                    android:layout_width="@dimen/x150"
                    android:layout_height="@dimen/y60"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginLeft="@dimen/x60"
                    android:background="@drawable/private_sys_btn_bg"
                    android:gravity="center"
                    android:text="确认"
                    android:textColor="@color/white"
                    android:textSize="@dimen/x30" />
            </LinearLayout>


        </LinearLayout>


    </RelativeLayout>



</RelativeLayout>