<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_wechat_capture"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent60">

    <RelativeLayout
        android:id="@+id/rl_neterror"
        android:layout_width="@dimen/x850"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        >


        <RelativeLayout
            android:layout_width="@dimen/x850"
            android:layout_height="@dimen/y550"
            android:layout_centerHorizontal="true"
            android:background="@drawable/sdk_dialog_bg"
            android:gravity="center"
            >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                >

                <TextView
                    android:id="@+id/net_errow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:textColor="@color/black"
                    android:text="当前网络不可用，请检查网络。"
                    android:textSize="35sp"
                    />

                <TextView
                    android:id="@+id/tv_setting"
                    android:padding="10dp"
                    android:layout_width="150dp"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bt_setting_bg"
                    android:layout_marginTop="30dp"
                    android:text="设  置"
                    android:textSize="30sp"
                    />

            </LinearLayout>




        </RelativeLayout>


        <ImageButton
            android:id="@+id/ib_closed"
            android:layout_width="@dimen/x40"
            android:layout_height="@dimen/x40"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/x30"
            android:layout_marginTop="@dimen/y20"
            android:background="@drawable/close_icon" />

    </RelativeLayout>




</RelativeLayout>
