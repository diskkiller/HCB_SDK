<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="850dp"
    android:layout_height="550dp"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="200dp">

    <LinearLayout
        android:id="@+id/rl_pay"
        android:layout_width="850dp"
        android:layout_height="550dp"
        android:background="@drawable/sdk_dialog_bg"
        android:gravity="center_horizontal"
        android:orientation="vertical">


        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="金币购买"
            android:textColor="@color/gray"
            android:textSize="55sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/tv_chang1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:text="金币不足，还需购买 "
                android:textColor="@color/gray"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/tv_need_pay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:text="1000"
                android:textColor="@color/orange"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/tv_chang2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:text=" 金币"
                android:textColor="@color/gray"
                android:textSize="30sp" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginLeft="70dp"
            android:layout_marginRight="70dp"
            android:layout_marginTop="50dp"
            android:background="@color/gray" />


        <LinearLayout
            android:id="@+id/ll_has_to_pay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="70dp"
            android:orientation="horizontal">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:text="还需支付 "
                android:textColor="@color/gray"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/tv_has_to_pay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:text="10.00"
                android:textColor="@color/orange"
                android:textSize="20sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:text=" 元"
                android:textColor="@color/gray"
                android:textSize="20sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/rb_cancel"
                android:layout_width="300dp"
                android:layout_height="match_parent"
                android:background="@drawable/bt_cancel_bg"
                android:button="@null"
                android:gravity="center"
                android:text="取  消"
                android:textColor="@color/red"
                android:textSize="30sp" />

            <Button
                android:id="@+id/rb_confim"
                android:layout_width="300dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="150dp"
                android:background="@drawable/bt_confim_bg"
                android:button="@null"
                android:gravity="center"
                android:text="确  认"
                android:textColor="@color/white"
                android:textSize="30sp" />
        </LinearLayout>


    </LinearLayout>

    <ImageButton
        android:id="@+id/ib_gold_closed"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/close_icon"
        android:layout_alignParentRight="true"
        android:layout_marginRight="40dp"
        android:layout_marginTop="20dp"
        />


</RelativeLayout>
