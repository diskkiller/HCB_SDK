<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:id="@+id/activity_wechat_capture"
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/transparent60"
>




    <LinearLayout
        android:id="@+id/rl_login"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_centerInParent="true"
        android:layout_marginLeft="50dp"
        android:background="@drawable/sdk_dialog_bg"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_centerHorizontal="true"
    >


        <RadioGroup
            android:id="@+id/radioGroup"
            android:layout_width="400dp"
            android:layout_height="30dp"
            android:layout_centerHorizontal="true"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/rb_tel"
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:background="@drawable/jia_chat_selector_left"
                android:button="@null"
                android:gravity="center"
                android:text="手机登录"
                android:textColor="@drawable/jia_title"
                android:textSize="20sp"/>

            <RadioButton
                android:id="@+id/rb_weixin"
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:background="@drawable/jia_chat_selector_right"
                android:button="@null"
                android:gravity="center"
                android:text="微信登录"
                android:textColor="@drawable/jia_title"
                android:textSize="20sp"/>
        </RadioGroup>


        <com.hcb.hcbsdk.activity.ParentViewPager
            android:id="@+id/pager_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            />


    </LinearLayout>



