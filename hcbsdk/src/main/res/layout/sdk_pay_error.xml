<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/x850"
    android:layout_height="@dimen/y550"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="@dimen/y200"
    >


    <LinearLayout
        android:layout_width="@dimen/x850"
        android:layout_height="@dimen/y550"
        android:background="@drawable/sdk_dialog_bg"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_net_error"
            android:layout_width="@dimen/x250"
            android:layout_height="@dimen/x250"
            android:background="@drawable/sdk_code_error" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/y20"
            android:text="您的网络已断开，请检查网络！"
            android:textColor="@color/orange" />
    </LinearLayout>

    <ImageButton
        android:id="@+id/ib_error_closed"
        android:layout_width="@dimen/x40"
        android:layout_height="@dimen/x40"
        android:background="@drawable/close_icon"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/x40"
        android:layout_marginTop="@dimen/y20"
        />


</RelativeLayout>



