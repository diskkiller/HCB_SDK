<?xml version="1.0" encoding="utf-8"?>
    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="850dp"
    android:layout_height="550dp"
        android:layout_marginTop="200dp"
        android:layout_centerHorizontal="true"
        >


        <LinearLayout
            android:layout_width="850dp"
            android:layout_height="550dp"
            android:background="@drawable/sdk_dialog_bg"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="30dp"
                >


                <TextView
                    android:id="@+id/tx_code_tips"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:textSize="30sp"
                    android:textColor="@color/gray"
                    android:text="请用微信扫码支付"
                    />
                <TextView
                    android:id="@+id/tv_code_weixin_need_pay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:textSize="30sp"
                    android:textColor="@color/orange"
                    android:text="1000"
                    />
                <TextView
                    android:id="@+id/tv_code_yuan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:textSize="30sp"
                    android:textColor="@color/gray"
                    android:text=" 元"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="20dp"
                >


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center_horizontal"
                    >
                    <ImageView
                        android:id="@+id/code_sweepIV"
                        android:layout_width="300dp"
                        android:layout_height="300dp"
                        android:background="@color/red"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="20sp"
                        android:textColor="@color/gray"
                        android:text="请使用微信扫码支付"
                        />

                </LinearLayout>


            </LinearLayout>




        </LinearLayout>


    <ImageButton
        android:id="@+id/ib_code_closed"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/close_icon"
        android:layout_alignParentRight="true"
        android:layout_marginRight="40dp"
        android:layout_marginTop="20dp"
        />


    </RelativeLayout>



