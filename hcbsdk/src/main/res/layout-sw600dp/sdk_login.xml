<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_wechat_capture"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent60">

    <RelativeLayout
        android:id="@+id/rl_login"
        android:layout_width="850dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        >


        <LinearLayout
            android:layout_width="850dp"
            android:layout_height="550dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/sdk_dialog_bg"
            android:gravity="center_horizontal"
            android:orientation="vertical">


            <RadioGroup
                android:id="@+id/radioGroup"
                android:layout_width="600dp"
                android:layout_height="70dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="30dp"
                android:orientation="horizontal">


                <RadioButton
                    android:id="@+id/rb_weixin"
                    android:layout_width="300dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/jia_chat_selector_left"
                    android:button="@null"
                    android:gravity="center"
                    android:text="微信登录"
                    android:textColor="@drawable/jia_title"
                    android:textSize="30sp" />

                <RadioButton
                    android:id="@+id/rb_tel"
                    android:layout_width="300dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/jia_chat_selector_right"
                    android:button="@null"
                    android:gravity="center"
                    android:text="手机登录"
                    android:textColor="@drawable/jia_title"
                    android:textSize="30sp" />
            </RadioGroup>


            <com.hcb.hcbsdk.activity.ParentViewPager
                android:id="@+id/pager_login"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                />


        </LinearLayout>


        <ImageButton
            android:id="@+id/ib_closed"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="30dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/close_icon" />

    </RelativeLayout>


